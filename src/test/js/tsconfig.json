{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "moduleResolution": "node",
        "noResolve": false,
        "noEmitOnError": true,
        "lib": [
            "es2021"
        ],
        "strict": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./build/dist",
        "rootDir": "./"
    },
    "include": [
        "./src"
    ]
}